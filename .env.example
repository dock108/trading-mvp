# Trading MVP - Environment Configuration Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# API KEYS - REQUIRED FOR LIVE DATA MODE
# =============================================================================

# CoinGecko API Configuration
# Sign up at: https://coingecko.com/api
# Free tier: 10,000 calls/month, 10-50 calls/minute
COINGECKO_API_KEY=your_coingecko_api_key_here
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3

# ETF Data APIs (Choose one primary source)
# Alpha Vantage - Sign up at: https://alphavantage.co/support/#api-key
# Free tier: 500 calls/day, 5 calls/minute
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Finnhub - Sign up at: https://finnhub.io/dashboard
# Free tier: 60 calls/minute
FINNHUB_API_KEY=your_finnhub_key_here

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# API Rate Limits (calls per minute)
CRYPTO_API_RATE_LIMIT=10
ETF_API_RATE_LIMIT=5

# Request Configuration
API_RETRY_ATTEMPTS=3
API_TIMEOUT_SECONDS=30
API_BACKOFF_FACTOR=2.0

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment Mode
ENVIRONMENT=development   # development, staging, production

# Logging Configuration
LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/trading_mvp.log

# Data Caching
CACHE_ENABLED=true
CACHE_EXPIRY_MINUTES=60
CACHE_DIRECTORY=data/cache

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Timezone Settings
MARKET_TIMEZONE=America/New_York
LOCAL_TIMEZONE=auto

# Development Settings
MOCK_API_RESPONSES=false
ENABLE_DEBUG_LOGGING=false
SAVE_API_RESPONSES=false

# Security Settings
MASK_API_KEYS_IN_LOGS=true
ENABLE_REQUEST_LOGGING=false